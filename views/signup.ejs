<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ruda&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/login_styles/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/login_styles/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/login_styles/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/login_styles/css/style.css">
    <link rel="icon" type="image/png"  href="https://img.icons8.com/material-outlined/24/000000/settings-3--v2.png">
    <script src="https://kit.fontawesome.com/34d4f625c3.js" crossorigin="anonymous"></script>

    <title>Technest</title>
  </head>
  <body>
  

  <div class="d-md-flex half">
    <div class="bg" style="background-image: url('/login_styles/images/iphone_back.jpg');"></div>
    <div class="contents">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="form-block mx-auto">
              <div class="text-center mb-5">
                <h3 class="text-uppercase"></i>Register to <strong>Technest</strong> <i class="fas fa-cogs"></i></h3>
              </div>
              <form method="post" action="/api/signup">
                <div class="form-group first">
                  <label for="username">Username</label>
                  <input name="username" required type="email" class="form-control" placeholder="Email...">
                </div>
                <div class="form-group last mb-3">
                  <label for="password">Password</label>
                  <input name="password" minlength="6" required type="password" class="form-control" placeholder="Password...">
                </div>
                <div class="form-group last mb-3">
                    <label for="password">Full Name</label>
                    <input name="name" minlength="1" required type="text" class="form-control" placeholder="Name...">
                  </div>

                <span class="signupBtn"><i class="fas fa-long-arrow-alt-left"></i><a href="/">Login Page</a></span>

                <input type="submit" value="Register" class="login_btn">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
    
    

    <script src="/login_styles/js/jquery-3.3.1.min.js"></script>
    <script src="/login_styles/js/popper.min.js"></script>
    <script src="/login_styles/js/bootstrap.min.js"></script>
    <script src="/login_styles/js/main.js"></script>
  </body>
</html>