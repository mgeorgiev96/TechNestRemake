<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ruda&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/login_styles/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/login_styles/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/login_styles/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/login_styles/css/style.css">
    <link rel="icon" type="image/png"  href="https://img.icons8.com/material-outlined/24/000000/settings-3--v2.png">
    <script src="https://kit.fontawesome.com/34d4f625c3.js" crossorigin="anonymous"></script>

    <title>Technest</title>
  </head>
  <body>
  

  <div class="d-md-flex half">
    <div class="bg" style="background-image: url('/login_styles/images/iphone_back.jpg');"></div>
    <div class="contents">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="form-block mx-auto">
              <div class="text-center mb-5">
                <h3 class="text-uppercase">Login to <strong>Technest</strong> <i class="fas fa-cogs"></i></h3>
              </div>
              <form method="post" action="/api/login">
                <div class="form-group first">
                  <label for="username">Username</label>
                  <input name="username" required type="email" class="form-control" placeholder="Email..." id="username">
                </div>
                <div class="form-group last mb-3">
                  <label for="password">Password</label>
                  <input name="password" required type="password" class="form-control" placeholder="Password..." id="password">
                </div>

                <span class="signupBtn">No Account ?<a href="/signup">Click Here.</a></span>

                <input type="submit" value="Log In" class="login_btn">

                <span class="text-center my-3 d-block font-weight-bold">OR</span>
                
                
                <div class="google_btn">
                <a href="/api/google" class="btn-google"><span class="icon-google mr-3"></span> Login with Google</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
    
    

    <script src="/login_styles/js/jquery-3.3.1.min.js"></script>
    <script src="/login_styles/js/popper.min.js"></script>
    <script src="/login_styles/js/bootstrap.min.js"></script>
    <script src="/login_styles/js/main.js"></script>
  </body>
</html>